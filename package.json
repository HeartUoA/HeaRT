{
  "name": "HeaRT",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:9000",
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.15.*"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.1.5",
    "antd": "^4.6.3",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "commitizen": "^4.2.1",
    "express": "^4.17.1",
    "less": "^3.12.2",
    "lessc": "^1.0.2",
    "mongoose": "^5.9.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "@commitlint/config-conventional": "^9.1.2",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.3.4",
    "@types/jest": "^24.0.0",
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "axios-mock-adapter": "^1.18.1",
    "babel-preset-minify": "^0.5.1",
    "chalk": "^4.0.0",
    "commitlint": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "supertest": "^4.0.2",
    "typescript": "~3.9.3"
  },
  "scripts": {
    "start-client": "react-scripts start",
    "build-client": "react-scripts build",
    "test-client": "react-scripts test --coverage --watchAll=false",
    "serve": "cd build-server && node server.js",
    "start-server": "nodemon --exec babel-node server/server.js",
    "test-server": "jest --config=server/jest.config.js /server --coverage",
    "build-server": "babel ./server --out-dir build-server --ignore \"server/coverage\",\"server/**/*.test.js\",\"server/jest.config.js\" --presets minify",
    "seed": "babel-node tools/seedDatabase.js",
    "prettier": "prettier --write '**/*.{ts,tsx,js,css,html}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "[[ -n $HUSKY_BYPASS ]] || pretty-quick --staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
